<body>
    <script>
        var palabra = prompt("ingresa una palabra")
        var palabrasinEsp = palabra.split('');
        let vocalEnc = encontrarVocal(palabrasinEsp)
        alert(`La primera vocal de ${palabra} es: ${vocalEnc}`)

        function encontrarVocal(string) {
            let vocales = 'aeiouAEIOU';
            for (let i = 0; i < string.length; i++) {
                if (vocales.indexOf(string[i]) !== -1) {
                    return string[i];      
                }
            }
         
        }
    

    </script>

</body>

